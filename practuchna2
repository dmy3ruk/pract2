def bibliotec10(id,last_name,first_name,group,course,books, statistics):
    reader={ "ID":id,
             "прізвищe":last_name,
             "Ім’я":first_name,
             "Група":group,
             "Курс":course,
             "Книги": books,
             "Статистика книг": statistics
             }
    choice = input("Оберіть опцію: ")
    while True:
        if choice == "1":
            print(reader)
        elif choice == "0":
            print("Програма завершена.")
            break
        else:
            print("Невірний вибір. Спробуйте ще раз.")
