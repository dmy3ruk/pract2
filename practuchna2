def check_sequence6(sequence):
    i=0
    zero_count=0;
    one_count=0;
    while i < len(sequence) and sequence[i] == '0':
        zero_count += 1
        i += 1
        while i < len(sequence) and sequence[i] == '1':
            one_count += 1
            i += 1
    if zero_count == one_count:
        return True
    return False

print(check_sequence6("0101011"))
print(" ")
